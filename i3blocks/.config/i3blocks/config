# Configuration settings for i3blocks.

command=~/.scripts/statusbar/$BLOCK_NAME
align=center
separator_block_width=30
markup=pango

[speed]
interval=1

[volume]
interval=once
signal=10

[date]
label=
command=date '+%m-%d-%Y'
interval=60

[time]
command=date '+%H:%M:%S'
interval=1

[user]
command=echo "$(whoami)@$(hostname)  "
interval=once
